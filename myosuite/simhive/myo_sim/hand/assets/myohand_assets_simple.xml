<mujoco model="Simplified_MyoHand">
    <compiler angle="radian" inertiafromgeom="true"/>

    <asset>
        <!-- Simple shapes replacing complex meshes -->
        <material name="MatObject" rgba="0.9 0.7 0.5 1"/>
    </asset>

    <worldbody>
        <!-- Simplified base for hand -->
        <body name="hand_base" pos="0 0 0.1">
            <geom type="box" size="0.1 0.1 0.1" rgba="0.8 0.8 0.8 1"/>
            <joint name="hand_joint" type="free"/>
            
            <!-- Replace individual parts of the hand with basic shapes -->
            <body name="thumb" pos="0.05 0 0.15">
                <joint name="thumb_joint" type="hinge" axis="1 0 0" range="-1.57 1.57"/>
                <geom type="capsule" size="0.02 0.1" rgba="0.9 0.7 0.5 1"/>
            </body>
            
            <body name="index_finger" pos="0.1 0 0.15">
                <joint name="index_finger_joint" type="hinge" axis="1 0 0" range="-1.57 1.57"/>
                <geom type="capsule" size="0.02 0.1" rgba="0.9 0.7 0.5 1"/>
            </body>

            <body name="middle_finger" pos="0.15 0 0.15">
                <joint name="middle_finger_joint" type="hinge" axis="1 0 0" range="-1.57 1.57"/>
                <geom type="capsule" size="0.02 0.1" rgba="0.9 0.7 0.5 1"/>
            </body>

            <body name="ring_finger" pos="0.2 0 0.15">
                <joint name="ring_finger_joint" type="hinge" axis="1 0 0" range="-1.57 1.57"/>
                <geom type="capsule" size="0.02 0.1" rgba="0.9 0.7 0.5 1"/>
            </body>

            <body name="little_finger" pos="0.25 0 0.15">
                <joint name="little_finger_joint" type="hinge" axis="1 0 0" range="-1.57 1.57"/>
                <geom type="capsule" size="0.02 0.1" rgba="0.9 0.7 0.5 1"/>
            </body>
        </body>
    </worldbody>

    <actuator>
        <!-- Use actuators for individual finger joints as a substitute for tendons -->
        <position name="thumb_actuator" joint="thumb_joint" kp="100"/>
        <position name="index_finger_actuator" joint="index_finger_joint" kp="100"/>
        <position name="middle_finger_actuator" joint="middle_finger_joint" kp="100"/>
        <position name="ring_finger_actuator" joint="ring_finger_joint" kp="100"/>
        <position name="little_finger_actuator" joint="little_finger_joint" kp="100"/>
    </actuator>
</mujoco>
